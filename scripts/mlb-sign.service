[Unit]
Description=MLB LED Sign
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/mrandyclark/mlb-sign
ExecStartPre=/bin/sleep 5
ExecStart=/usr/local/bin/node /home/mrandyclark/mlb-sign/dist/index.js
Restart=on-failure
RestartSec=30
StartLimitIntervalSec=300
StartLimitBurst=5
User=root
Environment=NODE_ENV=production
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
